#---------------------- bcast' MAKEFILE -------------------- 
 



# --- 1.- Opciones del sistema base ---

#-----------------------
# Constantes en SUNOS
#-----------------------
 
CC            = gcc
LIB_PATH      = -L/usr/lib
INCLUDE_PATH   = -I./ -I./../../../../../src/ -I./../../../../../include/
SOURCE_PATH   =   .
CFLAGS        = -g -Wall -D__SUNOS__ -D_REENTRANT -DPOSIX_THREADS  -DSOLARIS
LIBLINK       = -lpthread -lsocket -lnsl -lposix4



# --- 2.- Perfil de la libreria -------

LIB_PATH  = ../../../../../lib/
LIBNAME   = libmpi.a
OBJETOS   = \
            $(SOURCE_PATH)/bcast.o



 
#--------------------------
# Reglas de compilacion ...
#-------------------------- 

all:    init    bcast
refast: clean   bcast
fast:   bcast

bcast: $(OBJETOS)
	@echo "   Building bcast :"
	@echo "     bcast.sunos.xmp ..."
	@$(CC)  $(CFLAGS) -o bcast.sunos.xmp $(OBJETOS) $(LIBLINK) $(LIB_PATH)/$(LIBNAME)


init:
	@echo [2J 
	@echo "[1;1f" 
	@echo "" 
	@echo "    bcast" 
	@echo "   -------"
	@echo "" 
	@echo "   Computer  :"
	@echo "     "`uname -a` 
	@echo "   Options   :"
	@echo "     "$(CFLAGS)
	@echo "   Directory :"
	@echo "     "$(INCLUDE_PATH)
	@echo "   Compiling :"

%.o: %.c
	@echo "     $< ..." 
	@$(CC)  $(CFLAGS) $(INCLUDE_PATH) -c $< -o $@ 


clean: 
	@echo "   Removing trash..."
	@rm -fr $(OBJETOS)  ./bcast.sunos.xmp
	@echo "   Trash succesfully removed !."




# ---------------------- bcast' MAKEFILE -------------------- 

