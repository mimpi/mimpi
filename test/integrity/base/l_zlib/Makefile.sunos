# ------------------------------ MAKEFILE -----------------------
 


# --- 1.- Operating system options ---

CC            = gcc
LIB_PATH      = -L/usr/lib -L../../../../lib
INCLUDE_PATH  = -I./ -I../../../../src/ -I../../../../include
SOURCE_PATH   = .
CFLAGS        = -g -Wall -D__SUNOS__ -DSOLARIS
LIBLINK       = -lposix4 -lz ../../../../lib/libmpi.a ../../../../lib/liblzrw3.a



# --- 2.- Libraries profiles -------

TEST_OBJ  = \
            $(SOURCE_PATH)/x_zl.o

 

# --- 3.- Compilation rules -------

all:    init  $(TEST_OBJ)  test
fast:         $(TEST_OBJ)  test


init:
	@echo "" 
	@echo "    test" 
	@echo "   ------" 
	@echo "" 
	@echo "   Options   :"
	@echo "     "$(CFLAGS)
	@echo "   Directory :"
	@echo "     "$(INCLUDE_PATH)
	@echo "   Compiling :"

%.o: %.c
	@echo "     $< ..." 
	@$(CC)  $(CFLAGS) $(INCLUDE_PATH) -c $< -o $@ 

test:
	@echo "   Building test :"
	@echo "     x_zl.exe ..."
	@$(CC)  $(CFLAGS) $(LIB_PATH) -o ./x_zl.exe $(TEST_OBJ) $(LIBLINK)


clean: 
	@echo "   Removing trash..."
	@rm -fr $(TEST_OBJ) 
	@rm -fr ./x_zl.exe
	@echo "   Trash succesfully removed !."



# ------------------------------ MAKEFILE -----------------------

