# ------------------------------ MAKEFILE -----------------------
 


# --- 1.- Operating system options ---

CC            = gcc
LIB_PATH      = -L/usr/lib
INCLUDE_PATH  = -I./ -I../../../../src/ -I../../../../include
SOURCE_PATH   = .
CFLAGS        = -g -Wall -D__SUNOS__ -D__MEMORY_DEBUG__ -DSOLARIS
LIBLINK       = -lpthread -lsocket -lnsl -lposix4 -lpthread



# --- 2.- Libraries profiles -------

LIB_PATH  = ../../../../lib/
LIBNAME   = libmpi.a
TEST_OBJ  = \
            $(SOURCE_PATH)/l_buffa.o    \
            $(SOURCE_PATH)/l_darray.o   \
            $(SOURCE_PATH)/l_dhash.o    \
            $(SOURCE_PATH)/l_dstack.o

 

# --- 3.- Compilation rules -------

all:    init  $(TEST_OBJ)  test
fast:         $(TEST_OBJ)  test


init:
	@echo "" 
	@echo "    test" 
	@echo "   ------" 
	@echo "" 
	@echo "   Options   :"
	@echo "     "$(CFLAGS)
	@echo "   Directory :"
	@echo "     "$(INCLUDE_PATH)
	@echo "   Compiling :"

%.o: %.c
	@echo "     $< ..." 
	@$(CC)  $(CFLAGS) $(INCLUDE_PATH) -c $< -o $@ 

test:
	@echo "   Building test :"
	@echo "     l_buffa.exe ..."
	@$(CC)  $(CFLAGS) -o ./l_buffa.exe l_buffa.o $(LIB_PATH)/$(LIBNAME) $(LIBLINK)
	@echo "     l_darray.exe ..."
	@$(CC)  $(CFLAGS) -o ./l_darray.exe l_darray.o $(LIB_PATH)/$(LIBNAME) $(LIBLINK)
	@echo "     l_dhash.exe ..."
	@$(CC)  $(CFLAGS) -o ./l_dhash.exe l_dhash.o $(LIB_PATH)/$(LIBNAME) $(LIBLINK)
	@echo "     l_dstack.exe ..."
	@$(CC)  $(CFLAGS) -o ./l_dstack.exe l_dstack.o $(LIB_PATH)/$(LIBNAME) $(LIBLINK)

clean: 
	@echo "   Removing trash..."
	@rm -fr $(TEST_OBJ) 
	@rm -fr ./l_buffa.exe
	@rm -fr ./l_darray.exe
	@rm -fr ./l_dhash.exe
	@rm -fr ./l_dstack.exe
	@echo "   Trash succesfully removed !."



# ------------------------------ MAKEFILE -----------------------

