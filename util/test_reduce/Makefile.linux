#---------------------- test_reduce' MAKEFILE -------------------- 
 



# --- 1.- Opciones del sistema base ---

CC             = gcc
LIB_PATH       = -L/usr/lib
INCLUDE_PATH   = -I./ -I./../../ -I./../../include
SOURCE_PATH    =   .
CFLAGS         = -g -Wall -D__LINUX__ 
LIBLINK        =



# --- 2.- Perfil de la libreria -------

OBJETOS_REDUCE    = \
            $(SOURCE_PATH)/test_reduce.o

EXE_NAME       = \
            test_reduce.exe
EXE_PATH       = \
            $(SOURCE_PATH)/../../bin/


 
#--------------------------
# Reglas de compilacion ...
#-------------------------- 

all:     init   test_reduce 
refast:  clean  test_reduce
fast:           test_reduce

test_reduce: $(OBJETOS_REDUCE)
	@echo "   Building test_reduce ..."
	@$(CC)  $(CFLAGS) -o $(EXE_PATH)/$(EXE_NAME)  $(OBJETOS_REDUCE) $(LIBLINK)


init:
	@echo [2J 
	@echo "[1;1f" 
	@echo "" 
	@echo "    test_reduce" 
	@echo "   -------------"
	@echo "" 
	@echo "   Computer  :"
	@echo "     "`uname -a` 
	@echo "   Options   :"
	@echo "     "$(CFLAGS)
	@echo "   Directory :"
	@echo "     "$(INCLUDE_PATH)
	@echo "   Compiling :"

%.o: %.c
	@echo "     $< ..." 
	@$(CC)  $(CFLAGS) $(INCLUDE_PATH) -c $< -o $@ 


clean: 
	@echo "   Removing trash..."
	@rm -fr $(OBJETOS_REDUCE) $(EXE_PATH)/$(EXE_NAME)
	@echo "   Trash succesfully removed !."




# ---------------------- test_reduce' MAKEFILE -------------------- 

